                                <TapGestureRecognizer Command="{Binding AlleLesezeichenLoeschenCommand}"/>
                            </Label.GestureRecognizers>
                        </Label> 
                    </StackLayout>
                </StackLayout>-->
            </ScrollView>
        </Grid>
    </ContentPage >
    <!--#endregion-->

</TabbedPage>