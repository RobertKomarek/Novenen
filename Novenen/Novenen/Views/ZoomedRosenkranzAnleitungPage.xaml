    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Novenen.Views.ZoomedRosenkranzAnleitungPage"
    x:Name="ZoomedRosenkranzAnleitungContentPage"
    Title="Zurück"
    BackgroundColor="DarkGoldenrod">
    <ContentPage.Content>
        <ScrollView Orientation="Both">
            <Image Source="Rosenkranz_Anleitung.jpg" Aspect="AspectFit"
                   WidthRequest="{Binding ScreenHeight}" Rotation="-90"/>
